    <title>Dropdown Menu</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

body {
    background: url(box.jpg) no-repeat;
    width: 100%;
    min-height: 100vh;
    align-items: center;
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }
* {
    padding: 0;
    margin: 0;
    font-family: 'Poppins', monospace;
}

ul {
    list-style: none;
    background: #ff0266;
}

ul li {
    display: inline-block;
    position: relative;
}

ul li a {
    display: block;
    padding: 20px 25px;
    color: #FFF;
    text-decoration: none;
    text-align: center;
    font-size: 20px;
}

ul li ul.dropdown li {
    display: flex;

}

ul li ul.dropdown {
    width: 100%;
    background: #ff0266;
    position: absolute;
    z-index: 999;
    display: none;
}

ul li a:hover {
    background: #ff0266;
}

ul li:hover ul.dropdown {
    display: block;
}
    </style>
