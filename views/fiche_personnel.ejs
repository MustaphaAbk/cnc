                <input type="text" placeholder= " Fonction" required
                class="input" id="fonction" name="fonction">
        </div>
        <div class="groupe">
            <label for="salaire">Salaire  <span class="star"
                >*</span> </label><br>
                <input type="text" placeholder= " Salaire" required
                class="input" id="salaire" name="salaire">
        </div>
        <div class="groupe">
