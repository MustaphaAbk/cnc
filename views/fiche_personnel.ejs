  <form class="card" action="/fiche_personnel/delete" method="post">
    <h1>Supprimer un personnel</h1>
    <div class="separation"></div>
    <div class="corps-formulaire">
      <div class="gauche">
        <h3>• entrer l'id du personnel que vous souhaitez supprimer.</h3> 
        <div class="groupe">
              <label for="id">ID *  </label>
                <input type="number" id="id" value="id" name="id" required>
        </div>


    <div class="pied-formulaire" align="center">
      <button class="sup">supprimer</button>
    </div>
  </form>

</section>

    </body>
    </html>