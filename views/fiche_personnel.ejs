                <input type="date"required
                class="input" id="date_naissance" name="date_naissance">
             </div>
             <div class="groupe">
                <label for="date_embauche">Date embauche  <span class="star"
                    >*</span> </label><br>
                    <input type="date" required
                    class="input" id="date_embauche" name="date_embauche">
                 </div>
        <div class="groupe">
            <label for="service">Service  <span class="star"
                >*</span> </label><br>
                <input type="text" placeholder= " Service" required
                class="input" id="service" name="service">
        </div>
        <div class="groupe">
            <label for="fonction">Fonction  <span class="star"
